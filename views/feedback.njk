{% extends "base.njk" %}

{% block head %}
    <link rel="stylesheet" href="/assets/feedback.css">
{% endblock %}

{% block content %}
<div class="title-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-5">Feedback for {{ class.name }}, week {{ tute.week }}</h1>
</div>

<div class="container">
    <form method="post">
        <div class="form-group">
            <a>How did you overall feel about this tute (out of 5)</a>
            {% set sep_width = '3px' %}
            {% include 'separate.njk' %}
            <a> - </a>
            {% include 'separate.njk' %}

            {% set radio_name = 'overall' %}
            {% set radio_amount = 5 %}
            {% include 'radio_input.njk' %}
        </div>

        <div class="form-group">
            <a>How confident do you now feel about the content covered in the tute (out of 5)</a>
            {% set sep_width = '3px' %}
            {% include 'separate.njk' %}
            <a> - </a>
            {% include 'separate.njk' %}

            {% set radio_name = 'content' %}
            {% set radio_amount = 5 %}
            {% include 'radio_input.njk' %}
        </div>

        <div class="form-group">
            <a>How did you find the pacing of the tute?</a>
            {% set sep_width = '3px' %}
            {% include 'separate.njk' %}
            <a> - </a>
            {% include 'separate.njk' %}

            {% set radio_name = 'pacing' %}
            {% set radio_amount = 5 %}
            {% set radio_labels = ['*Snooze*', 'Too slow', 'Just right', 'Too fast', 'Usain Bolt'] %}
            {% include 'radio_input.njk' %}
        </div>

        <div class="form-group">
            {% set text_name = 'good' %}
            {% set text_display = 'What did you like about the tute?' %}
            {% include 'textarea_input.njk' %}
        </div>

        <div class="form-group">
            {% set text_name = 'bad' %}
            {% set text_display = 'What do you think could be improved?' %}
            {% include 'textarea_input.njk' %}
        </div>

        <div class="form-group">
            {% set text_name = 'feedback' %}
            {% set text_display = 'Any other feedback?' %}
            {% include 'textarea_input.njk' %}
        </div>

        <div class="form-group">
            {% set text_name = 'name' %}
            {% set text_display = 'What is your name? (COMPLETELY OPTIONAL - leave blank to stay anonymous)' %}
            {% set text_width = '40%' %}
            {% include 'text_input.njk' %}
        </div>

        <div class="form-group">
            {% set check_name = 'share' %}
            {% set check_display = 'Would you like to give me permission to share this feedback?' %}
            {% include 'checkbox_input.njk' %}
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<div class="container">
  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row"></div>
  </footer>
</div>

{% endblock %}