{# Inputs: radio_name, radio_amount, radio_labels? #}
{% for i in range(1, radio_amount + 1) %}
<div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="{{ radio_name }}" id="{{ radio_name }}{{ i }}" value="{{ i }}">
    <label class="form-check-label" for="{{ radio_name }}{{ i }}">
        {% if radio_labels %}
            {{ radio_labels[i - 1] }}
        {% else %}
            {{ i }}
        {% endif %}
    </label>
</div>
{% endfor %}

{% set radio_name = undefined %}
{% set radio_amount = undefined %}
{% set radio_labels = undefined %}